{
    "input": [
        {
            "input": "src",
            "output": "/",
            "filter": "\\.(js|html|json|glsl)$",
            "recursive": true,
            "parse": true
        },
        {
            "input": "src/css",
            "output": "/css",
            "recursive": true
        },
        {
            "input": "src/images",
            "output": "/images",
            "recursive": true
        },
        {
            "input": "src/index.html",
            "output": "/index.html"
        }
    ],
    "transform": [],
    "output": [
        {
            "input": "/images",
            "output": "build/images",
            "mode": "each"
        },
        {
            "input": "/index.html",
            "output": "build/index.html",
            "mode": "each"
        },
        {
            "input": "/js",
            "output": "build/js/main.js",
            "mode": "concat"
        },
        {
            "input": "/css",
            "output": "build/css",
            "mode": "each"
        },
        {
            "input": "/html",
            "output": "build/html/templates.json",
            "mode": "json"
        },
        {
            "input": "/glsl/shaders",
            "output": "build/glsl/shaders.json",
            "mode": "json"
        },
        {
            "input": "/glsl/mixins",
            "output": "build/glsl/mixins.json",
            "mode": "json"
        }
    ]
}
